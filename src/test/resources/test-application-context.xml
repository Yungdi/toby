<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <beans>
        <bean id="xmlDataSource" class="org.springframework.jdbc.datasource.SimpleDriverDataSource">
            <property name="driverClass" value="org.mariadb.jdbc.Driver"/>
            <property name="url" value="jdbc:mariadb://localhost:3307/toby"/>
            <property name="username" value="root"/>
            <property name="password" value="root"/>
        </bean>
        <bean id="xmlUserDao" class="com.yun27jin.toby.user.dao.UserDao">
            <property name="jdbcContext" ref="xmlJdbcContext"/>
            <property name="dataSource" ref="xmlDataSource"/>
        </bean>
        <bean id="xmlJdbcContext" class="com.yun27jin.toby.user.dao.JdbcContext">
            <property name="dataSource" ref="xmlDataSource"/>
        </bean>
    </beans>
</beans>